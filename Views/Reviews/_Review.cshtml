@model OdeToFood.Models.RestaurantReview

<link rel="stylesheet" href="~/Content/Site.css"/>
<div class="review">
    <h4>@Model.Name</h4>
    <span>@Model.Rating</span>
    <p>@Model.City, @Model.Country</p>

    <span class="right">
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
    </span>
</div>

